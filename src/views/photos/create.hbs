<!-- Starts Main Section -->
<main>
  <!-- Start Add Photo Section -->
  <div class="createPage">
    <h2>Add photo</h2>
    <!-- Start Add Photo Form -->
    <form method="POST">
      <p>
        <input
          type="text"
          name="name"
          value="{{photoData.name}}"
          placeholder="Name"
        />
      </p>

      <p>
        <input
          type="number"
          name="age"
          value="{{photoData.age}}"
          placeholder="Age"
        />
      </p>

      <p>
        <textarea
          type="text"
          name="description"
          placeholder="Description"
        >{{photoData.description}}</textarea>
      </p>

      <p>
        <input
          type="text"
          name="location"
          value="{{photoData.location}}"
          placeholder="Location"
        />
      </p>

      <p>
        <input
          type="text"
          name="imageUrl"
          value="{{photoData.imageUrl}}"
          placeholder="Link to image"
        />
      </p>
      <!-- Add Photo Button -->
      <button class="add-btn" type="submit">Add Photo</button>
    </form>
  </div>
</main>